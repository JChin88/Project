<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.cs2340.cs2340project">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.view.activities.LoginActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.view.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".presentation.view.activities.RegisterUserActivity"
            android:parentActivityName=".presentation.view.activities.LoginActivity"/>
        <activity android:name=".mvc.controller.LocationList" />
        <activity android:name=".presentation.view.activities.UserInfoActivities" />
        <activity
            android:name=".presentation.view.activities.LocationInfoActivities"
            android:launchMode="singleTop" />
        <activity
            android:name=".presentation.view.activities.DonationItemListActivities"
            android:launchMode="singleTop"
            android:parentActivityName=".presentation.view.activities.LocationInfoActivities" />
        <activity
            android:name=".presentation.view.activities.AddDonationItem"
            android:parentActivityName=".presentation.view.activities.DonationItemListActivities" />
        <activity android:name=".presentation.view.activities.DonationItemDetailsActivity"></activity>
    </application>

</manifest>