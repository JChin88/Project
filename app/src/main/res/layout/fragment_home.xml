<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/move_to_location_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location List"/>

    <Button
        android:id="@+id/move_to_inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:layout_below="@id/move_to_location_btn"/>

    <Button
        android:id="@+id/temp_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/move_to_inventory"/>

</RelativeLayout>