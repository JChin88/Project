<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    app:layout_goneMarginEnd="8dp"
    app:cardBackgroundColor="#FFFFE8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/donation_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donation Item Name"
            android:maxLines="1"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <ImageButton
            android:id="@+id/donation_item_dots_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@id/donation_item_short_description"
            android:src="@drawable/ic_dots"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="#FFFFE8"
            android:tint="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/donation_item_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/donation_item_name"
            android:text="Short Description"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>