<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvc.controller.ApplicationActivity">

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/test_userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onUserInfoPress"
        android:text="User Information" />

    <Button
        android:id="@+id/location_Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onLocationData"
        android:text="Location Data" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSearchPress"
        android:text="Search Inventories" />

    <Button
        android:id="@+id/Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onLogoutPress"
        android:text="Logout" />
</LinearLayout>